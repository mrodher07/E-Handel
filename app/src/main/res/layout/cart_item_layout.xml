<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="15dp"
    android:layout_margin="10dp">

    <RelativeLayout
        android:id="@+id/rlCartItem"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/primaryColor">

        <TextView
            android:id="@+id/tvCartItemName"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:padding="10dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/tvCartItemQuantity"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tvCartItemName"
            android:padding="10dp"
            android:text="Product Quantity"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRemoveItemFormCart"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="X"
            android:textStyle="bold"
            android:layout_toRightOf="@id/tvCartItemQuantity"
            android:padding="20dp"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:gravity="center"
            />


        <TextView
            android:id="@+id/tvCartItemPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Price"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_below="@+id/tvCartItemQuantity"
            android:textAlignment="center"

            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>