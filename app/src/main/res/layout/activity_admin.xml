<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminActivities.AdminActivity"
    android:background="@color/RedCake">

    <TextView
        android:id="@+id/tvAdminName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primaryColor"
        android:text="Admin Name"
        android:textSize="35sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        />

    <LinearLayout
        android:id="@+id/LinearLayoutAdminCategorys"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/tvAdminName"
        >

        <LinearLayout
            android:id="@+id/LinearLayoutAddNewProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="100dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:id="@+id/addProductIcon"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/addproducticon" />

            <TextView
                android:id="@+id/tvAddProductAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvAddProductAdmin"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutDeleteNewProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/deleteProductIcon"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/deleteproducticon"
                />

            <TextView
                android:id="@+id/tvDeleteProductAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tvDeleteProduct"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayoutAddNewAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="30dp"
            android:padding="10dp"
            >
            <ImageView
                android:id="@+id/addNewAdminIcon"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:src="@drawable/addnewadminicon"
                />

            <TextView
                android:id="@+id/tvAddNewAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/addNewAdmin"
                android:textStyle="bold"
                android:textSize="25sp"
                android:textAlignment="center"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>